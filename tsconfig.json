{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "declaration": true,
        "strictNullChecks": true,
        "target": "es5",
        "outDir": "dist",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "lib": [
            "es2016"
        ],
        "rootDir": "src",
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "node",
            "mocha"
        ],
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}